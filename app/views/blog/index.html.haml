    #tara.left.fancy TARA
    #reynvaan.right.fancy REYNVAAN
 
  .intro.collapse
    .fancy perfection
    .fancy in
    .fancy pixels
    .fancy.fancier FOTOGRAPHY
    
.main.hide
  .side-nav
    .fancy.fancier#name TARA REYNVAAN
    - i = 0
    - @albums.each do |album|
      .br
      .side-nav-link-block
        .side-nav-link
          - if i == 0
            %a.album-link.current= album.title
            - i = i + 1
          - else
            %a.album-link= album.title 
