  .album.collapse.in

  .carousel.slide#slider
    .carousel-inner
    %a.carousel-control.left{"data-slide" => "prev", :href => "#slider"} ‹
    %a.carousel-control.right{"data-slide" => "next", :href => "#slider"} ›
